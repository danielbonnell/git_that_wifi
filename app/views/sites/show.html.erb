<h1>Site Details</h1>

<div class="row">
  <div class="large-10 columns">
    <table class="sites">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Zip</th>
          <th>Phone</th>
          <th>Cost Rating</th>
          <th>Url</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @site.name %></td>
          <td>
            <p>
              <%= @site.address %>
              <br>
              <%= @site.city %>, <%= @site.state %> <%= @site.zip %>
            </p>
          </td>
          <td><%= @site.phone %></td>
          <td><%= @site.cost_rating %></td>
          <td><%= @site.url %></td>
          <td><%= @site.description %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<% if current_user != nil && current_user.id == @site.user_id %>
    <%= link_to "Edit", edit_site_path(@site) %>
    <%= link_to 'Delete Site', site_path(@site), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
