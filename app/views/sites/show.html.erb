<div class="row">
  <div class="large-3 columns">
    <h1><%= @site.name %></h1>
  </div>
  <div class="large-9 columns">
    <ul class="right button-group">
      <li><a href="<%= @site.url %>" class="button">Website</a></li>
      <li><a href="#" class="button">Directions</a></li>
      <li><a href="#" class="button">Hours</a></li>
      <li><a href="#" class="button">Contact</a></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <div id="slider">
      <img src="http://placehold.it/1000x400&text=[ img 1 ]"/>
    </div>

    <hr/>
  </div>
</div>

<div class="row">
  <div class="large-4 columns">
    <img src="http://placehold.it/400x300&text=[img]"/>
    <h4>Where we're located:</h4>
    <p>Cool Google Map API goes here.</p>
  </div>

  <div class="large-4 columns">
    <img src="http://placehold.it/400x300&text=[img]"/>
    <h4>Details</h4>
    <p><%= @site.cost_rating %></p>
    <p><%= @site.description %></p>
  </div>

  <div class="large-4 columns">
    <img src="http://placehold.it/400x300&text=[img]"/>
    <h4>Contact Us!</h4>
    <p><%= @site.name %></p>
    <p><%= @site.address %>
      <br>
      <%= @site.city %>, <%= @site.state %> <%= @site.zip %>
    </p>
    <p><%= @site.phone %></p>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <div class="panel">
      <div class="reviews">
        <% unless @reviews.empty? %>
        <ul>
          <% @reviews.each do |review|  %>
          <li>
            Rating: <%= review.rating %><br>
            Comment: <%= review.comment %>
            <div class="votes">
              <%= form_for @vote, url: review_votes_path(review), method: "patch" do |f| %>
              <%= f.hidden_field :choice, value: 1 %>
              <%= f.submit "Upvote" %>
              <% end %>

              <%= form_for @vote, url: review_votes_path(review), method: "patch" do |f| %>
              <%= f.hidden_field :choice, value: -1 %>
              <%= f.submit "Downvote" %>
              <% end %>
            </div>
            Score: <%= review.score %>
            <div>
              <% unless current_user == nil %>
              <% if review.user_id == current_user.id || (!current_user.nil? && current_user.role == 2) %>
              <%= link_to "Edit Review", edit_site_review_path(@site, review) %>
              <%= link_to "Delete", site_review_path(@site, review), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
              <% end %>
            </div>
          </li>
          <% end %>
        </ul>
        <% end %>
      </div>
      <%= paginate @reviews %>

      <h4>User Controls</h4>
      <div class="row">
        <div class="large-9 columns">
          <div class="review">
            <%= link_to "Add a Review", new_site_review_path(@site) %>
          </div>
        </div>
        <div class="large-3 columns">
          <% if (current_user != nil && current_user.id == @site.user_id) || (!current_user.nil? && current_user.role == 2) %>
          <%= link_to "Edit", edit_site_path(@site) %>
          <%= link_to "Delete Site", site_path(@site), method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>

