<h1>Site Details</h1>

<div class="row">
  <div class="large-10 columns">
    <table class="sites">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Zip</th>
          <th>Phone</th>
          <th>Cost Rating</th>
          <th>Url</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @site.name %></td>
          <td>
            <p>
              <%= @site.address %>
              <br>
              <%= @site.city %>, <%= @site.state %> <%= @site.zip %>
            </p>
          </td>
          <td><%= @site.phone %></td>
          <td><%= @site.cost_rating %></td>
          <td><%= @site.url %></td>
          <td><%= @site.description %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
  <br>

<div class ="row">
  <div class="reviews">
    <% unless @reviews.empty? %>
      <ul>
        <% @reviews.each do |review|  %>
          <li>
          Rating: <%= review.rating %><br>
          Comment: <%= review.comment %>
            <div class="votes">
              <%= form_for @vote, url: review_votes_path(review), method: "patch" do |f| %>
                <%= f.hidden_field :choice, value: 1 %>
                <%= f.submit "Upvote" %>
              <% end %>

              <%= form_for @vote, url: review_votes_path(review), method: "patch" do |f| %>
                <%= f.hidden_field :choice, value: -1 %>
                <%= f.submit "Downvote" %>
              <% end %>
            </div>
            Score: <%= review.score %>
            <div>
              <% unless current_user == nil %>
                <% if review.user_id == current_user.id || (!current_user.nil? && current_user.role == 2) %>
                  <%= link_to "Edit Review", edit_site_review_path(@site, review) %>
                  <%= link_to "Delete", site_review_path(@site, review), method: :delete, data: { confirm: "Are you sure?" } %>
                <% end %>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <%= paginate @reviews %>
</div>

  <div class="review">
    <%= link_to "Add a Review", new_site_review_path(@site) %>
  </div>



<% if (current_user != nil && current_user.id == @site.user_id) || (!current_user.nil? && current_user.role == 2) %>
    <%= link_to "Edit", edit_site_path(@site) %>
    <%= link_to "Delete Site", site_path(@site), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
