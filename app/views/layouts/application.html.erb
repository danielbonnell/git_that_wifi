<!DOCTYPE html>
<html>
<head>
  <title>Git that WiFi!</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar" data-topbar="" role="navigation">
    <!-- Title -->
    <ul class="title-area">
      <li class="name"><h1><a href="/">Git that WiFi!</a></h1></li>

      <!-- Mobile Menu Toggle -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <!-- Top Bar Section -->

    <section class="top-bar-section">

      <!-- Top Bar Left Nav Elements -->
      <ul class="left">

        <!-- Search | has-form wrapper -->
        <li class="has-form">
          <div class="row collapse">
            <%= form_tag sites_path, method: :get do %>
              <div class="large-8 small-9 columns">
                <%= text_field_tag :query %>
              </div>
              <div class="large-4 small-3 columns">
                <%= submit_tag "Search", { class: "alert button expand radius" } %>
              </div>
            <% end %>
          </div>
        </li>
      </ul>

      <!-- Top Bar Right Nav Elements -->
      <ul class="right">
        <!-- Divider -->
        <li class="divider"></li>

        <!-- Anchor -->
        <% if current_user %>
        <li><%= avatar(45) %></li>
        <li class="divider"></li>
        <li><%= link_to "My Account", user_path(current_user) %></li>
        <li class="divider"></li>
        <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <li class="divider"></li>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
        <% end %>
        <li class="divider"></li>
      </ul>
    </section>
  </nav>

  <% flash.each do |key, value| %>
    <div class="success label">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= javascript_tag do %>
    $(function(){
      $(document).foundation();
    });
  <% end %>
  <%= yield :extra_footer %>
</body>
</html>
